html,
body
    height 100%
    font-family sans-serif
    color gray


$bg
    background main
    height 100%

// Header home
main
    @extends $bg
    margin-left rem(400px)
    background-color white
    padding-top rem(20px)
    padding-left rem(40px)

    .content
        padding: 20px

    li
        margin 0
        list-style-type none
    .person
        img
            size(130, 130)
            border-radius 100%
            margin-bottom 80px
    ul.recent
        padding-left 0

        h2
            color accent_color
            font-weight bold
            text-transform uppercase
            font-size rem(16px)
            margin-bottom rem(30px)

        li
            a
                text-decoration none
                color gray
                &:hover
                    h4
                        color accent_color
                        letter-spacing rem(0.5px)
                h4
                    font-weight normal
                i
                    margin-right rem(10px)

    // h1,h2,h3,p,a
    //  color: sec
    .site-title
        font-size rem(30px)
        line-height 1
        margin-top -80px
        display block
        letter-spacing 9px
        +above(cut)
            letter-spacing 16px
            margin-bottom 0
            font-size rem(20px)
    .site-description
        font-size rem(20px)
        display block
        margin rem(30px) 0
        +above(cut)
            font-size rem(40px)

    h3.heroe
        color heroe_fg
        max-width rem(600px)
        font-size rem(30px)
        font-weight 300
        margin-bottom rem(60px)

.rectangle
    display block
    width 207px
    border-radius 5px
    align(h)
    background-color #74479c
    text-align center
    color #ffffff
    font-weight bold

// Header Post
.header-post
    @extends $bg
    height 62px
    +above(rem(1450px))
        background transparent
        #open
            position fixed
            background transparent
    p
        margin 0
        padding-top 23px
        text-align center
        color sec

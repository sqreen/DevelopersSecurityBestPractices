.page_posts
    .tree-posts
        display block
        width 100%
    #search
       background transparent
       svg
           background-color transparent
.tree-posts
    padding-top: 43px
    width 347px
    height 100%
    position fixed
    background-color neotree
    overflow-y auto
    top 0
    +below(rem(1450px))
        display none

    h3
        color #c06a64
        margin 0 auto rem(20px)
        width 50%
.post-item
    text-align left
    padding rem(5px) rem(20px)
    position relative
    .content
        cf();
        +below(cut)
            text-align center
            stack()
        a
            +above(cut)
                col(4.2/6)
            text-decoration none
            border none
        .date
            color main
        .post-title
            color #c7b288
            position relative
            padding 0
            font-size rem(16px)
            margin 0
            text-align center
            &.selected
                background main
            &:hover
                background-color mainHover
            +above(cut)
                text-align left
                margin-left rem(-10px)
                display initial
                font-size rem(17px)
                text-decoration none
